{
  "name": "theatrejs",
  "version": "0.2.0-dev",
  "description": "(to be) a web based animation studio",
  "main": "lib/Theatre.js",
  "scripts": {
    "test": "mocha \"test/**/*.coffee\"",
    "test:watch": "mocha \"test/**/*.coffee\" --watch",

    "compile": "coffee --bare --compile --output ./lib ./src",
    "compile:watch": "jitter src lib -b",

    "watch": "npm run compile:watch & npm run test:watch",
    "winwatch": "start/b npm run compile:watch & npm run test:watch",

    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AriaMinaei/theatrejs.git"
  },
  "keywords": [
    "keyframes",
    "animation",
    "webgl",
    "timeline"
  ],
  "author": "Aria Minaei",
  "license": "N/A",
  "bugs": {
    "url": "https://github.com/AriaMinaei/theatrejs/issues"
  },
  "dependencies": {
    "kilid": "0.1.0-beta.10",
    "moosh": "0.1.0-beta.18",
    "raf-timing": "^0.3.3",
    "stupid-dom-interface": "0.1.0-beta.13",
    "timing-function": "^0.1.3",
    "utila": "^0.3.3"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "chai-changes": "^1.3.4",
    "chai-fuzzy": "^1.4.0",
    "coffee-script": "^1.9.0",
    "jitter": "^1.3.0",
    "mocha": "^2.0.1",
    "mocha-pretty-spec-reporter": "0.1.0-beta.1",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.6.0"
  }
}
